{
  "openapi": "3.0.0",
  "info": {
    "version": "1.0.0",
    "title": "FullStackDelas - Backend",
    "description": "API Backend do projeto FullStackDelas"
  },
  "servers": [
    {
      "url": "http://localhost:3000"
    }
  ],
  "paths": {
    "/linkedin": {
      "post": {
        "tags": [
          "Linkedin"
        ],
        "description": "Endpoint para cadastrar um registro.",
        "responses": {
          "201": {
            "description": "Registro cadastrado com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/responseCreateSuccess"
                }
              },
              "application/xml": {
                "schema": {
                  "$ref": "#/components/schemas/responseCreateSuccess"
                }
              }
            }
          },
          "500": {
            "description": "Erro interno do servidor",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/responseError"
                }
              },
              "application/xml": {
                "schema": {
                  "$ref": "#/components/schemas/responseError"
                }
              }
            }
          }
        },
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "nome": {
                    "example": "any"
                  },
                  "email": {
                    "example": "any"
                  },
                  "linkedin": {
                    "example": "any"
                  },
                  "frase": {
                    "example": "any"
                  }
                }
              }
            }
          }
        }
      },
      "get": {
        "tags": [
          "Linkedin"
        ],
        "description": "Endpoint para retornar todos registro.",
        "responses": {
          "201": {
            "description": "Todos os registros retornados",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/responseGet"
                }
              },
              "application/xml": {
                "schema": {
                  "$ref": "#/components/schemas/responseGet"
                }
              }
            }
          },
          "500": {
            "description": "Erro interno do servidor",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/responseError"
                }
              },
              "application/xml": {
                "schema": {
                  "$ref": "#/components/schemas/responseError"
                }
              }
            }
          }
        }
      }
    },
    "/linkedin/{id}": {
      "get": {
        "tags": [
          "Linkedin"
        ],
        "description": "Endpoint para obter um registro por ID.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Registro retornado pelo ID",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/responseGetRegisterById"
                }
              },
              "application/xml": {
                "schema": {
                  "$ref": "#/components/schemas/responseGetRegisterById"
                }
              }
            }
          },
          "404": {
            "description": "Registro não encontrado",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/responseNotFound"
                }
              },
              "application/xml": {
                "schema": {
                  "$ref": "#/components/schemas/responseNotFound"
                }
              }
            }
          },
          "500": {
            "description": "Erro interno do servidor",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/responseError"
                }
              },
              "application/xml": {
                "schema": {
                  "$ref": "#/components/schemas/responseError"
                }
              }
            },
            "schema": {
              "$ref": "#/components/schemas/responseError"
            }
          }
        }
      },
      "put": {
        "tags": [
          "Linkedin"
        ],
        "description": "Endpoint para atualizar um registro por ID.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Registro atualizado com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/responseUpdateSuccess"
                }
              },
              "application/xml": {
                "schema": {
                  "$ref": "#/components/schemas/responseUpdateSuccess"
                }
              }
            }
          },
          "404": {
            "description": "Not Found"
          },
          "500": {
            "description": "Erro interno do servidor",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/responseError"
                }
              },
              "application/xml": {
                "schema": {
                  "$ref": "#/components/schemas/responseError"
                }
              }
            }
          }
        },
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "nome": {
                    "example": "any"
                  },
                  "email": {
                    "example": "any"
                  },
                  "linkedin": {
                    "example": "any"
                  },
                  "frase": {
                    "example": "any"
                  }
                }
              }
            }
          }
        }
      },
      "delete": {
        "tags": [
          "Linkedin"
        ],
        "description": "Endpoint para excluir um registro por ID.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Registro excluído com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/responseDeleteSuccess"
                }
              },
              "application/xml": {
                "schema": {
                  "$ref": "#/components/schemas/responseDeleteSuccess"
                }
              }
            }
          },
          "500": {
            "description": "Erro interno do servidor",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/responseError"
                }
              },
              "application/xml": {
                "schema": {
                  "$ref": "#/components/schemas/responseError"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "requestRegisterCreate": {
        "type": "object",
        "properties": {
          "nome": {
            "type": "string",
            "example": "Nome do Usuário"
          },
          "email": {
            "type": "string",
            "example": "email@test.com"
          },
          "linkedin": {
            "type": "string",
            "example": "https://www.linkedin.com/in/usuario"
          },
          "frase": {
            "type": "string",
            "example": "Uma frase bonita"
          }
        },
        "required": [
          "nome",
          "email",
          "linkedin",
          "frase"
        ],
        "xml": {
          "name": "requestRegisterCreate"
        }
      },
      "responseGet": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "nome": {
              "type": "string",
              "example": "Nome do Usuário"
            },
            "email": {
              "type": "string",
              "example": "email@test.com"
            },
            "linkedin": {
              "type": "string",
              "example": "https://www.linkedin.com/in/usuario"
            },
            "frase": {
              "type": "string",
              "example": "Uma frase bonita"
            }
          }
        },
        "xml": {
          "name": "responseGet"
        }
      },
      "responseGetRegisterById": {
        "type": "object",
        "properties": {
          "nome": {
            "type": "string",
            "example": "Nome do Usuário"
          },
          "email": {
            "type": "string",
            "example": "email@test.com"
          },
          "linkedin": {
            "type": "string",
            "example": "https://www.linkedin.com/in/usuario"
          },
          "frase": {
            "type": "string",
            "example": "Uma frase bonita"
          }
        },
        "required": [
          "nome",
          "email",
          "linkedin",
          "frase"
        ],
        "xml": {
          "name": "responseGetRegisterById"
        }
      },
      "responseCreateSuccess": {
        "type": "object",
        "properties": {
          "msg": {
            "type": "string",
            "example": "Registro criado com sucesso"
          },
          "key": {
            "type": "string",
            "example": "-123abc"
          }
        },
        "required": [
          "msg",
          "key"
        ],
        "xml": {
          "name": "responseCreateSuccess"
        }
      },
      "responseUpdateSuccess": {
        "type": "object",
        "properties": {
          "msg": {
            "type": "string",
            "example": "Registro atualizado com sucesso"
          },
          "key": {
            "type": "string",
            "example": "-123abc"
          }
        },
        "required": [
          "msg",
          "key"
        ],
        "xml": {
          "name": "responseUpdateSuccess"
        }
      },
      "responseDeleteSuccess": {
        "type": "object",
        "properties": {
          "msg": {
            "type": "string",
            "example": "Registro excluído com sucesso"
          }
        },
        "required": [
          "msg"
        ],
        "xml": {
          "name": "responseDeleteSuccess"
        }
      },
      "responseError": {
        "type": "object",
        "properties": {
          "error": {
            "type": "string",
            "example": "Erro interno do servidor"
          }
        },
        "required": [
          "error"
        ],
        "xml": {
          "name": "responseError"
        }
      },
      "responseNotFound": {
        "type": "object",
        "properties": {
          "error": {
            "type": "string",
            "example": "Registro não encontrado"
          }
        },
        "required": [
          "error"
        ],
        "xml": {
          "name": "responseNotFound"
        }
      }
    }
  }
}